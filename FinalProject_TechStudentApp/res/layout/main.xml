<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.85"
    android:fadingEdge="horizontal"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fmapps.finalproject_techstudentapp.Main" >

    <RelativeLayout
        android:id="@+id/layoutRelative1"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imgPen"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/imgGuide"
            android:fadingEdge="horizontal"
            android:src="@drawable/pen1" />

        <ImageView
            android:id="@+id/imgStudent"
            android:layout_width="600dp"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:fadingEdge="horizontal"
            android:maxHeight="600dp"
            android:src="@drawable/studentanim" />

        <ImageView
            android:id="@+id/imgPencil"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/imgStudent"
            android:layout_marginLeft="33dp"
            android:src="@drawable/pencil1" />

        <ImageView
            android:id="@+id/imgTech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imgStudent"
            android:layout_marginRight="35dp"
            android:layout_marginTop="54dp"
            android:src="@drawable/techanim" />

        <ImageView
            android:id="@+id/imgGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgPencil"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/guideanim" />

    </RelativeLayout>

</RelativeLayout>
